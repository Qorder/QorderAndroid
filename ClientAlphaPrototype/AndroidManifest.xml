<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clientalphaprototype"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.clientalphaprototype.ScanActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.clientalphaprototype.Categories"
            android:label="categories" >
        </activity>
        <activity
            android:name="com.example.clientalphaprototype.Products"
            android:label="products" >
        </activity>
        <activity
            android:name="com.example.clientalphaprototype.Details"
            android:label="details" >
        </activity>
        <activity
            android:name="com.example.clientalphaprototype.Basket"
            android:label="@string/title_activity_basket" >
        </activity>
        <activity android:name="com.dm.zbar.android.scanner.ZBarScannerActivity"
            android:screenOrientation="landscape"
        	android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
