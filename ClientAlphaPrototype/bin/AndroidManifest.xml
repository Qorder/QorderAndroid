<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clientalphaprototype"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    
    <instrumentation android:targetPackage="com.example.clientalphaprototype" android:name="android.test.InstrumentationTestRunner"></instrumentation>

    

    <application
        android:allowBackup="true"
        android:icon="@drawable/image2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="qorder.clientprototype.activities.ScanActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="qorder.clientprototype.activities.CategoriesActivity"
            android:label="categories" >
        </activity>
        <activity
            android:name="qorder.clientprototype.activities.ProductsActivity"
            android:label="products" >
        </activity>
        <activity
            android:name="qorder.clientprototype.activities.DetailsActivity"
            android:label="details" >
        </activity>
        <activity
            android:name="qorder.clientprototype.activities.BasketActivity"
            android:label="@string/title_activity_basket" >
        </activity>
        <activity android:name="com.dm.zbar.android.scanner.ZBarScannerActivity"
            android:screenOrientation="landscape"
        	android:label="@string/app_name" >
        </activity>
        <uses-library android:name="android.test.runner" />
    </application>

</manifest>
